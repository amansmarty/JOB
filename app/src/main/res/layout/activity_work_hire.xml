<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:background="#FFC107"
    tools:context=".Work_Hire">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/signin_round"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="SIH"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_work"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:drawableLeft="@drawable/working"
                android:text="I want to Work"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_hire"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:drawableLeft="@drawable/announcement"
                android:text="I want to hire"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>